with open('account.txt', 'r') as f:
	
	print "ACCOUNT INFORMATION FOR BLACKSBURG RESIDENTS"
	for line in f:
		inline = [line.split()]
		if (inline[0][3] == "Blacksburg"):
			Number = inline[0][4]
			LName = inline[0][1]
			FName = inline[0][0]
			Amount = inline[0][2]
			string = [Number, LName, FName, Amount]
			output = ', '.join(string)
			print output
